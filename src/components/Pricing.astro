  {
    title: "Starter",
    description: "Lorem ipsum, dolor sit amet consectetur adipisicing elit.",
    price: "20$",
    included: [
      {
        text: "10 users",
        access: true,
      },
      {
        text: "Basic Support",
        access: true,
      },
      {
        text: "2gb of storage",
        access: true,
      },
      {
        text: "Help center access",
        access: false,
      },
      {
        text: "Phone support",
        access: false,
      },
      {
        text: "Community access",
        access: false,
      },
    ],
  },
  {
    title: "Pro",
    description: "Lorem ipsum, dolor sit amet consectetur adipisicing elit.",
    price: "30$",
    included: [
      {
        text: "10 users",
        access: true,
      },
      {
        text: "Basic Support",
        access: true,
      },
      {
        text: "2gb of storage",
        access: true,
      },
      {
        text: "Help center access",
        access: true,
      },
      {
        text: "Phone support",
        access: false,
      },
      {
        text: "Community access",
        access: false,
      },
    ],
  },
  {
    title: "Enterprise",
    description: "Lorem ipsum, dolor sit amet consectetur adipisicing elit.",
    price: "100$",
    included: [
      {
        text: "10 users",
        access: true,
      },
      {
        text: "Basic Support",
        access: true,
      },
      {
        text: "2gb of storage",
        access: true,
      },
      {
        text: "Help center access",
